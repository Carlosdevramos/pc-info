{
  "name": "pc-info",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build:ts": "tsc",
    "copy:public": "ncp src/public dist/public",
    "build": "npm run build:ts && npm run copy:public",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "package": "npm run build && pkg . --targets node18-win-x64 --output build/pc-info.exe"
  },
  "pkg": {
  
    "assets": [
      "dist/public/**/*"
    ]
  },
  "dependencies": {
    "express": "^4.21.2",
    "open": "^8.4.2",
    "systeminformation": "^5.27.11"
  },
  "devDependencies": {
    "@types/express": "^5.0.4",
    "@types/node": "^24.9.1",
    "ncp": "^2.0.0",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "bin": "dist/server.js"
}